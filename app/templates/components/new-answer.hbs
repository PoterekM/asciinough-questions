{{#if addNewAnswer}}
<div class="well">
  <h1>Provide some pointers!</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="level">Level:</label>
        {{input value=level id="level"}}
      </div>
      <div class="form-group">
        <label for="answer">answer:</label>
        {{textarea value=answer id="answer"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
</div>
{{else}}
<button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
